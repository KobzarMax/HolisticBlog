<script>
$(document).ready(function() {
    // open external links in new tab
    $("a").each(function() {
        const href = $(this).attr('href');
        if (!href.startsWith(window.location.origin) && !href.startsWith('/')) {
            $(this).attr('target', '_blank');
        }
    });

    // force break in footer nav
    $('<div class="flex-break"></div>').insertBefore('footer .nav-twitter');
});
</script>
<script src="https://kit.fontawesome.com/e50b17d262.js" crossorigin="anonymous"></script>

<script>
    var headerItem = document.querySelector('#gh-head');

document.addEventListener('scroll', animateNavnarOnScroll);

function animateNavnarOnScroll() {
  let totalHeight = headerItem.clientHeight
  if (window.scrollY >= totalHeight) {
    headerItem.classList.add("scroll");
  } else {
    headerItem.classList.remove("scroll");
  }
}

window.addEventListener("load", function(){
  backgroundSequence();
})

var bgImageArray = ["https://i.7fon.org/1000/e107061.jpg", "https://images.travelandleisureasia.com/wp-content/uploads/sites/2/2022/11/14155054/Netflix-India-1600x900.jpg?tr=w-1920",],
base = "",
secs = 4;
bgImageArray.forEach(function(img){
    new Image().src = base + img; 
    // caches images, avoiding white flash between background replacements
});

function backgroundSequence() {
  window.clearTimeout();
  var k = 0;
  for (i = 0; i < bgImageArray.length; i++) {
    setTimeout(function(){ 
      const bgItem = document.querySelector('.gh-site-heading')
      bgItem.style.background = "url(" + base + bgImageArray[k] + ") no-repeat center center";
      bgItem.style.backgroundSize ="cover";
    if ((k + 1) === bgImageArray.length) { setTimeout(function() { backgroundSequence() }, (secs * 1000))} else { k++; }			
    }, (secs * 1000) * i)	
  }
}
</script>


